<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woodys.demos">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.woodys.demos.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.woodys.demos.LoginActivity"
            android:label="@string/title_activity_login2"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name="com.woodys.demos.Login2Activity"
            android:label="@string/title_activity_login2"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity
            android:name="com.woodys.demos.Login3Activity"
            android:label="@string/title_activity_login2"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
    </application>

</manifest>